@model MVCKutuphane.Models.Entity.TBLHareket
@{
    ViewBag.Title = "OduncVer";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<form class="form-group" method="post">
    <div></div>
    <div style="margin-top:15px">
        <label>Üye ID</label>
        @*@Html.TextBoxFor(x => x.UYE, new { @class = "form-control" })*@
        @Html.DropDownListFor(k => k.TBLUyeler.ID, (List<SelectListItem>)ViewBag.dgr1,new {@class="form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Kitap ID</label>
        @*@Html.TextBoxFor(x => x.KITAP, new { @class = "form-control" })*@
        @Html.DropDownListFor(k => k.TBLKitap.ID, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })

    </div>
    <div style="margin-top:15px">
        <label>Personel ID</label>
        @*@Html.TextBoxFor(x => x.PERSONEL, new { @class = "form-control" })*@
        @Html.DropDownListFor(k => k.TBLPersonel.ID, (List<SelectListItem>)ViewBag.dgr3, new { @class = "form-control" })

    </div>
    <div style="margin-top:15px">
        <label>Kitap Alış Tarihi</label>
        <input type="text" class="form-control" name="ALISTARIH" value="@DateTime.Now.ToShortDateString()" />
    </div>
    <div style="margin-top:15px">
        <label>Kitap İade Tarihi </label>
        <input type="text" class="form-control" name="IADETARIH" value="@DateTime.Now.AddDays(7).ToShortDateString()" />
    </div>




    <div style="margin-top:15px">
        <button class="btn btn-group" style="background-color:#5525ce; color:white"> Kitabı Ödünç Ver</button>
        <input type="hidden" value="False" name="ISLEMDURUM" />
    </div>

</form>
