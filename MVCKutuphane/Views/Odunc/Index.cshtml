<table class="table table-bordered">
    <tr>
        <td>İşlem ID</td>
        <td>Kitap Adı</td>
        <td>Üye</td>
        <td>Personel</td>
        <td>Alış Tarihi</td>
        <td>İade Tarihi</td>
        <td>İade</td>
       

    </tr>
    @foreach (var k in Model)
    {
        <tr>

            <td>@k.ID</td>
            <td>@k.TBLKitap.AD</td>
            <td>@k.TBLUyeler.AD&nbsp @k.TBLUyeler.SOYAD</td>
            <td>@k.PERSONEL</td>
            <td>@Convert.ToDateTime(k.ALISTARIH).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(k.IADETARIH).ToString("dd/MM/yyyy")</td>
            
            <td><a href="/Odunc/Oduncİade/@k.ID" class="btn btn-default" style="background-color:#4e0d29; color:white ">Kitabı İade Et</a></td>

        </tr>

    }

</table>
