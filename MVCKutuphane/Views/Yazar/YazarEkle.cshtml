@model MVCKutuphane.Models.Entity.TBLYazar
@{
    ViewBag.Title = "YazarEkle";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<form class="form-group" method="post">
    <div></div>
    <div style="margin-top:15px">
        <label>Yazar Adı</label>
        @Html.TextBoxFor(x => x.AD, new { @class = "form-control" })
        @Html.ValidationMessageFor(y => y.AD, "", new { @class = "text-danger" })
    </div>
    <div style="margin-top:15px">
        <label>Yazar Soyadı</label>
        @Html.TextBoxFor(y => y.SOYAD, new { @class = "form-control" })
        @Html.ValidationMessageFor(y => y.SOYAD, "", new { @class = "text-danger" })
    </div>
    <div style="margin-top:15px">
        <label>Yazar Detayı</label>
        @Html.TextBoxFor(y => y.DETAY, new { @class = "form-control" })
    </div>

    <div style="margin-top:15px">
        <button class="btn btn-info"> Yazar Ekle</button>
    </div>

</form>