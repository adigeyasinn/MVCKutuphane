@using MVCKutuphane.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBLUyeler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Uyeler</h2>

<table class="table table-bordered">
    <tr>
        <th>ÜYE ID</th>
        <th>ÜYE ADI</th>
        <th>ÜYE SOYADI</th>
        <th>MAİL</th>
        <th>KULLANICI ADI</th>
        <th>ÜYE ŞİFRESİ</th>
        <th>TELEFON</th>
        <th>OKUL</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var ktg in Model)
    {
        <tr>
            <td>@ktg.ID</td>
            <td>@ktg.AD</td>
            <td>@ktg.SOYAD</td>
            <td>@ktg.KULLANICIADI</td>
            <td>@ktg.MAİL</td>
            <td>@ktg.SIFRE</td>
            <td>@ktg.TELEFON</td>
            <td>@ktg.OKUL</td>
            <td><a href="/Uye/UyeSil/@ktg.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Uye/UyeGetir/@ktg.ID" class="btn btn-success">Güncelle</a></td>

        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa}))
<a href="/Uye/UyeEkle" class="btn btn-primary">Yeni Üye Ekle</a>
